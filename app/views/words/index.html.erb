<div class="main">
  <div class="main-content">
    <div class="new-main">
      <div class="new-content">
        <div class="wide-content-article">
          <article class="article">
            <div class="wpcf7">
              <div class="error-form">
                <%= form_for(@proverb) do |f| %>
                  <% if @proverb.errors.any? %>
                    <h3 class="error">
                      入力した内容にエラーが<%= @proverb.errors.count %>件あります
                    </h3>
                    <ul class="error-point">
                      <% @proverb.errors.full_messages.each do |message| %>
                        <li class="error-point-item">
                          <p class="message">
                            <%= message %>
                          </p>
                        </li>
                      <% end %>
                    </ul>
                  <% end %>
                  <div class="place-space">
                    <%= f.label :proverb,"名言", {class: 'place-logo'} %>
                    <%= f.text_field :proverb,:placeholder => "例: ”海賊王”に!!!おれはなるっ!!!!", class: "place" %>
                  </div>
                  <div class="address-space">
                    <%= f.label :owner, "キャラ", {class: 'address-logo'} %>
                    <%= f.text_area :owner,:placeholder => "例:　モンキー・D・ルフィ", class: "address" %>
                  </div>
                  <div class="send">
                    <%= f.submit  "名言投稿", class: "send-buttom" %>
                  </div>
                <% end %>
              </div>
            </div>
        </article>
      </div>
    </div>
  </div>
     <div class="wide-content">
      <div class="loop">
        <% if @proverbs.present? %>
          <%= render partial: "proverb", collection: @proverbs %>
        <% else %>
          <p class="proverb-nil">
            ※　まだ投稿がありません
          </p>
        <% end %>
      </div>
      <%= paginate @proverbs %>
     </div>
  </div>
</div>
